<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="/Content/CSS/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/CSS/Site.css" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/globalscripts")
</head>
<body>
    <div class="SiteContainer">
        <div class="PageHeader">
            <div class="HeaderText">
                @if (!String.IsNullOrEmpty(Convert.ToString(ViewBag.PageHeading)))
                { <a href="/">@ViewBag.PageHeading</a> }
                else if (!String.IsNullOrEmpty(Convert.ToString(ViewBag.Title)))
                { <a href="/">@ViewBag.Title</a> }
                else
                { <a href="/">BiscuitChief.net</a> }
            </div>
            @BiscuitChief.HtmlExtensions.GetTopNavigation()
        </div>
        <div class="PageContent">
            @RenderBody()
        </div>
        <div class="PageFooter">
            <div class="DividerLine"></div>
            <div class="PageFooterText">&copy; 2015 - Steven Perkins</div>
        </div>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
